<h1>Registrar um curso</h1>

<%= form_for @course do |f| %>
<%= f.label :name, 'Nome' %>
<%= f.text_field :name %>
<%= f.label :description, 'Descrição' %>
<%= f.text_area :description %>
<%= f.label :code, 'Código' %>
<%= f.text_area :code %>
<%= f.label :price, 'Preço' %>
<%= f.text_area :price %>
<%= f.label :enrollment_deadline, 'Data limite de matrícula' %>
<%= f.text_area :enrollment_deadline %>
<%= f.submit 'Criar curso'%>
<% end %>